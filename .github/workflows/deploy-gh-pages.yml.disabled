name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # main ë¸Œëœì¹˜ì— í‘¸ì‹œë  ë•Œ ìë™ ë°°í¬
  workflow_dispatch:  # ìˆ˜ë™ ì‹¤í–‰ ê°€ëŠ¥

# GitHub Pages ë°°í¬ë¥¼ ìœ„í•œ ê¶Œí•œ ì„¤ì •
permissions:
  contents: read
  pages: write
  id-token: write

# ë™ì‹œ ì‹¤í–‰ ì œí•œ
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  # ë¹Œë“œ ì‘ì—…
  build:
    runs-on: ubuntu-latest
    environment: github-pages  # Environment ì‚¬ìš©
    steps:
      - name: ğŸ“¥ Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ”§ Inject MongoDB Data API credentials
        env:
          MONGODB_DATA_API_URL: ${{ vars.MONGODB_DATA_API_URL || '' }}
          MONGODB_DATA_API_KEY: ${{ secrets.MONGODB_DATA_API_KEY || '' }}
          MONGODB_DATA_SOURCE: ${{ vars.MONGODB_DATA_SOURCE || 'ksnu-portfolio-cluster' }}
          MONGODB_DATABASE: ${{ vars.MONGODB_DATABASE || 'portfolio' }}
        run: |
          echo "ğŸ”§ Injecting MongoDB Data API credentials into config.js..."
          
          # config.template.jsì—ì„œ í™˜ê²½ë³€ìˆ˜ ì£¼ì…
          if [ -f "public/js/config.template.js" ]; then
            sed "s|\${MONGODB_DATA_API_URL}|$MONGODB_DATA_API_URL|g" public/js/config.template.js | \
            sed "s|\${MONGODB_DATA_API_KEY}|$MONGODB_DATA_API_KEY|g" | \
            sed "s|\${MONGODB_DATA_SOURCE}|$MONGODB_DATA_SOURCE|g" | \
            sed "s|\${MONGODB_DATABASE}|$MONGODB_DATABASE|g" > public/js/config.js
            
            echo "âœ… Environment variables injected from template!"
          else
            echo "âš ï¸ config.template.js not found, using config.js as-is"
          fi
          
          echo "âœ… MongoDB Data API configured!"
          echo "Data Source: $MONGODB_DATA_SOURCE"
          echo "Database: $MONGODB_DATABASE"

      - name: ğŸ”§ Setup Pages
        uses: actions/configure-pages@v4

      - name: ğŸ“¦ Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './public'  # public í´ë”ë¥¼ GitHub Pagesì— ë°°í¬

  # ë°°í¬ ì‘ì—…
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: ğŸš€ Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4

      - name: âœ… Deployment Success
        run: |
          echo "ğŸ‰ Successfully deployed to GitHub Pages!"
          echo "ğŸ“ URL: ${{ steps.deployment.outputs.page_url }}"
